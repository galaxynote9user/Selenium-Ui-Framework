<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cucumber Test Suite" parallel="tests" thread-count="2">
    <test name="Cucumber Tests">
        <classes>
            <class name="com.framework.runners.TestRunner">
                <methods>
                    <include name="runScenario">
                        <parameter name="cucumber.options" value="--tags @sanity" />
                    </include>
                </methods>
            </class>
        </classes>
    </test>
</suite>